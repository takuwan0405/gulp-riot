{
    "extends": "airbnb/base",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "semi": [2, "never"],
        "no-param-reassign": [2, {"props": false}],
        "no-unused-vars": [2, {"args": "after-used", "argsIgnorePattern": "^_"}]
    },
    "globals": {
        "riot": true,
        "opts": true
    },
    "plugins": ["riot"]
}
